<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Orwel.Configuration.Hook</PackageId>
    <Version>0.0.1-beta</Version>
    <Authors>Cédric VERNOU</Authors>
    <Company>Orwel</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>VERNOU Cédric © 2020</Copyright>
    <RepositoryUrl>https://github.com/Orwel/Orwel.Configuration.Hook</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.2.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All"/>
  </ItemGroup>

</Project>